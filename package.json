{
  "name": "@nexusdi/core",
  "version": "0.2.1",
  "description": "A modern, simple to use DI container inspired by industry-leading frameworks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "logo.svg"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "docs:dev": "cd docs && npm run start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "node scripts/release.js patch --create-branch",
    "release:patch": "node scripts/release.js patch --create-branch",
    "release:minor": "node scripts/release.js minor --create-branch",
    "release:major": "node scripts/release.js major --create-branch",
    "release:direct": "node scripts/release.js patch",
    "release:direct:patch": "node scripts/release.js patch",
    "release:direct:minor": "node scripts/release.js minor",
    "release:direct:major": "node scripts/release.js major"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "ioc",
    "typescript",
    "decorators",
    "modules",
    "container",
    "injection",
    "framework"
  ],
  "author": "Mikael Pettersson<iam@evanion.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NexusDI/core.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://nexus.js.org",
  "bugs": {
    "url": "https://github.com/NexusDI/core/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  }
}
