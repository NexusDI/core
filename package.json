{
  "name": "@nexusdi/core",
  "version": "0.1.0",
  "description": "A modern, simple to use DI container inspired by industry-leading frameworks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "docs:dev": "cd docs && npm run start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "check-names": "node check-npm-names.js"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "ioc",
    "typescript",
    "decorators",
    "modules",
    "container",
    "injection",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexusdi/nexusdi.git"
  },
  "homepage": "https://github.com/nexusdi/nexusdi#readme",
  "bugs": {
    "url": "https://github.com/nexusdi/nexusdi/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  }
}
